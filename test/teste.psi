// Conta quantos elementos pares tem num vetor.
fn conta_pares(vetor: [i32]) {
    let count: i32 = 0;

    for i: i32 in 0..#vetor {
        if vetor[i] % 2 == 0 {
            count += 1;
        }
    }

    return count;
}

fn main() {
    let vet: [i32] = [1, 2, 3, 4, 5];
    let resp: i32 = conta_pares(vet);
    debug resp;
}

